<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="（温馨提示：一分钟只能获取一次验证码，所以第一次获取成功后等待一分钟再操作）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_tel_old"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="修改手机号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/lin_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_get_code_old"
                        android:layout_alignParentRight="true"
                        android:layout_width="100dp"
                        android:textColor="@color/colorAccent"
                        android:text="获取验证码"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/et_get_code_old"
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@+id/tv_get_code_old"
                        android:layout_height="match_parent"
                        android:hint="输入旧手机号验证码"
                        android:inputType="number"
                        android:layout_centerVertical="true"
                        android:lines="1"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:id="@+id/lin_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/et_phone"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="请输入新手机号"
                        android:inputType="number"
                        android:lines="1"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/login_code_btn_sg"
                        android:layout_alignParentRight="true"
                        android:layout_width="100dp"
                        android:textColor="@color/colorAccent"
                        android:text="获取验证码"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/confirm_code_ed_sg"
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@+id/login_code_btn_sg"
                        android:layout_height="match_parent"
                        android:hint="输入新手机号验证码"
                        android:inputType="number"
                        android:layout_centerVertical="true"
                        android:lines="1"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </RelativeLayout>

</LinearLayout>